export
CC = cc
CCFLAGS = -Wall -Wextra -Werror

NAME = philo

Header = include/philo.h

SRC = Mandatory/philo.c Mandatory/parcing.c Mandatory/get_time.c Mandatory/routine.c

OBJ = $(SRC:.c=.o)

all : Intro $(NAME)

%.o : %.c
	$(CC)  -c $< -o $@
$(NAME) : $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)

re : fclean all

push :
	@echo "\x1b[32m Please Enter The Name Of File\n";read files;git add $$files
	@echo "Please Enter The Commite Message\n \x1b[0m";read Commit;git commit -m "$$Commit"
	@git push

Intro :
		@echo "\x1b[32m $$Intro \x1b[0m"
