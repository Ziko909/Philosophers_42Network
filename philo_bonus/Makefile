export
CC = cc
CCFLAGS = -Wall -Wextra -Werror

NAME = philo_bonus

Header = include/philo.h

SRC = Src/childs_work.c Src/get_time_bonus.c Src/memory_management.c Src/parcing_bonus.c Src/philo_bonus.c Src/routine_bonus.c

OBJ = $(SRC:.c=.o)

all : Intro $(NAME)

%.o : %.c
	$(CC) $(CCFLAGS) -c $< -o $@
	
$(NAME) : $(OBJ)
	$(CC) $(CCFLAGS) $(OBJ) -o $(NAME)

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)

re : fclean all

Intro :
		@echo "\x1b[32m $$Intro \x1b[0m"
